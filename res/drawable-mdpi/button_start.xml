<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners 
                android:radius="3dp" 
                />
            <padding
                android:left="15dp"
                android:right="15dp"
                android:top="10dp"
                android:bottom="10dp"
                />
            <solid
                android:color="#D14836"
                />
		</shape>
    </item>
    
    <item android:state_pressed="true">
        <shape>
            <corners 
                android:radius="3dp" 
                />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                />
            <solid
                android:color="#f16856"
                />
            
        </shape>
    </item>
</selector>
		
   
